<UserControl x:Class="BudgetTracker.Views.TransactionForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             <ComboBox ItemsSource="{x:Static helpers:EnumHelper.GetValues(Type=vm:TransactionType)}"
                       SelectedItem="{Binding SelectedType, Mode=TwoWay}" />
             Height="250" Width="400">

    <UserControl.DataContext>
        <vm:TransactionFormViewModel/>
    </UserControl.DataContext>

    <StackPanel Margin="10" Orientation="Vertical" VerticalAlignment="Top">

        <TextBox Margin="0,5" 
                 Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                 PlaceholderText="Description"/>

        <TextBox Margin="0,5" 
                 Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" 
                 PlaceholderText="Amount"/>

        <ComboBox Margin="0,5"
                  SelectedItem="{Binding SelectedType, Mode=TwoWay}"
                  ItemsSource="{x:Static vm:TransactionType.GetValues}" />

        <ComboBox Margin="0,5"
                  SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                  DisplayMemberPath="Name"
                  ItemsSource="{Binding Categories}" />

        <Button Content="Save Transaction" 
                Command="{Binding SaveCommand}" 
                Margin="0,10,0,0" Width="150"/>

    </StackPanel>
</UserControl>
