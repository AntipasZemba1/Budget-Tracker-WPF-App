<Window x:Class="BudgetTrackerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Budget Tracker" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="DescriptionBox" Width="100" Margin="5" PlaceholderText="Description"/>
            <TextBox x:Name="CategoryBox" Width="100" Margin="5" PlaceholderText="Category"/>
            <TextBox x:Name="AmountBox" Width="100" Margin="5" PlaceholderText="Amount"/>
            <Button Content="Add" Click="Add_Click" Margin="5"/>
        </StackPanel>

        <ListBox x:Name="TransactionList" Grid.Row="1" Margin="0,0,0,10" />

        <TextBlock x:Name="BalanceText" Grid.Row="2" FontWeight="Bold" FontSize="16" HorizontalAlignment="Right"/>
    </Grid>
</Window>
