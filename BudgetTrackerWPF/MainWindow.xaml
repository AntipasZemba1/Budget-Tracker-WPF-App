<Window x:Class="BudgetTrackerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView"
        Title="Budget Tracker" Height="500" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Inputs -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="DescriptionBox" Width="150" Margin="5" Text="Description"/>
            <TextBox x:Name="CategoryBox" Width="150" Margin="5" Text="Category"/>
            <TextBox x:Name="AmountBox" Width="100" Margin="5" Text="Amount"/>
            <Button Content="Add" Click="Add_Click" Margin="5"/>
        </StackPanel>

        <!-- Transactions -->
        <ListBox x:Name="TransactionList" Grid.Row="1" Margin="0,0,0,10" />

        <!-- Balance and PieChart -->
        <StackPanel Grid.Row="2">
            <TextBlock x:Name="BalanceText" FontWeight="Bold" FontSize="16" HorizontalAlignment="Right" Margin="0,0,0,10"/>

            <lvc:PieChart x:Name="CategoryPieChart" Height="200"/>
        </StackPanel>
    </Grid>
</Window>
