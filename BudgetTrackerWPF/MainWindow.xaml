<Window x:Class="BudgetTrackerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Budget Tracker" Height="450" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <TextBlock>Description</TextBlock>
                <TextBox x:Name="DescriptionBox" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock>Category</TextBlock>
                <TextBox x:Name="CategoryBox" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock>Amount</TextBlock>
                <TextBox x:Name="AmountBox" Width="100"/>
            </StackPanel>
            <Button Content="Add Transaction" Click="Add_Click" Margin="10" Padding="10,5"/>
        </StackPanel>

        <ListBox x:Name="TransactionList" Grid.Row="1" Margin="0,0,0,10"
                 MouseDoubleClick="TransactionList_MouseDoubleClick"/>

        <TextBlock x:Name="BalanceText" Grid.Row="2" FontWeight="Bold"
                   FontSize="16" HorizontalAlignment="Right" Margin="0,10,0,0"/>
    </Grid>
</Window>
